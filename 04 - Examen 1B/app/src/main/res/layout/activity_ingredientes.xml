<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.examen1b.IngredientesActivity">

    <TextView
        android:id="@+id/textView2Ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Ingredientes"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaIngrediente"
        android:layout_width="400dp"
        android:layout_height="460dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2Ingrediente"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textView2Ingrediente"
        app:layout_constraintTop_toBottomOf="@+id/textView2Ingrediente" />

    <Button
        android:id="@+id/btnInsertarIngrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="CREAR"
        app:layout_constraintBottom_toTopOf="@+id/rvListaIngrediente"
        app:layout_constraintEnd_toEndOf="@+id/rvListaIngrediente"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="@+id/rvListaIngrediente" />

</androidx.constraintlayout.widget.ConstraintLayout>