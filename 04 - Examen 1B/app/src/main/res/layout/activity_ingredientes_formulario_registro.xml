<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.examen1b.IngredientesFormularioRegistro">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORMULARIO DE REGISTRO DE INGREDIENTES"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />


    <EditText
        android:id="@+id/edtxtNombreIngrediente"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtxtCaloriasIngrediente"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Calorias"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edtxtNombreIngrediente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtxtNombreIngrediente"
        app:layout_constraintTop_toBottomOf="@+id/edtxtNombreIngrediente"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtxtIDRecetaIngrediente"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Nombre de la Receta"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edtxtPrecioUnitarioIngrediente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtxtPrecioUnitarioIngrediente"
        app:layout_constraintTop_toBottomOf="@+id/edtxtPrecioUnitarioIngrediente"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtxtfechaCompraIngrediente"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Fecha de Compra"
        android:inputType="date"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edtxtCaloriasIngrediente"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtxtCaloriasIngrediente"
        app:layout_constraintTop_toBottomOf="@+id/edtxtCaloriasIngrediente"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtxtPrecioUnitarioIngrediente"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Precio Unitario"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edtxtfechaCompraIngrediente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtxtfechaCompraIngrediente"
        app:layout_constraintTop_toBottomOf="@+id/edtxtfechaCompraIngrediente"
        tools:ignore="TouchTargetSizeCheck" />

    <CheckBox
        android:id="@+id/checkBoxInventarioIngrediente"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Inventario  (Si / No)"
        app:layout_constraintEnd_toEndOf="@+id/edtxtIDRecetaIngrediente"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtxtIDRecetaIngrediente"
        app:layout_constraintTop_toBottomOf="@+id/edtxtIDRecetaIngrediente" />

    <Button
        android:id="@+id/btnCrearIngrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="CREAR"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxInventarioIngrediente"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/checkBoxInventarioIngrediente"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxInventarioIngrediente" />


</androidx.constraintlayout.widget.ConstraintLayout>