<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Registrarse">


    <Button
        android:id="@+id/aicCrearCuenta"
        android:layout_width="222dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/green_ezfood"
        android:text="Crear Cuenta"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/aicetcontraseña2"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/aicetcontraseña2"
        app:layout_constraintTop_toBottomOf="@+id/aicetcontraseña2"
        app:layout_constraintVertical_bias="0.492" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="106dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_ezfood" />

    <EditText
        android:id="@+id/aicetusuario"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="#747373"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFDFD"
        app:cornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <EditText
        android:id="@+id/aicetcontraseña"
        android:layout_width="218dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:background="#747373"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="#FDFDFD"
        android:textColorHint="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/aicetusuario"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="@+id/aicetusuario"
        app:layout_constraintTop_toBottomOf="@+id/aicetusuario" />

    <EditText
        android:id="@+id/aicetcontraseña2"
        android:layout_width="218dp"
        android:layout_height="58dp"
        android:layout_marginTop="132dp"
        android:background="#747373"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/aicetusuario"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/aicetusuario"
        app:layout_constraintTop_toBottomOf="@+id/aicetusuario" />

</androidx.constraintlayout.widget.ConstraintLayout>